<h1>Вашa корзина:</h1>

<table class="table table-striped">
  <thead>
    <tr>
       <th scope="col">Название пиццы</th>
      <th scope="col">Цена</th>
      <th scope="col">Количество</th>
    </tr>
  </thead>

  <tbody>
    <% total_price = 0 %>
    <% total_qty = 0 %>
    <% @items.each do |item| %>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price * item[1].to_i %>
    <% total_qty += item[1].to_i %>
   <% end %>

   <tr>
      <td></td>
      <td>Итого: <%= total_price %> руб</td>
      <td><%= total_qty %></td>
    </tr>
  </tbody>
</table>