<h1>Вашa корзина:</h1>

<div id="cart">
  <table class="table table-striped">
    <thead>
      <tr>
         <th scope="col">Название пиццы</th>
        <th scope="col">Цена</th>
        <th scope="col">Количество</th>
      </tr>
    </thead>

    <tbody>
      <% total_price = 0 %>
      <% total_qty = 0 %>
      <% @items.each do |item| %>
      <tr>
        <td><%= item[0].title %></td>
        <td><%= item[0].price %></td>
        <td><%= item[1] %></td>
      </tr>
      <% total_price += item[0].price * item[1].to_i %>
      <% total_qty += item[1].to_i %>
     <% end %>

     <tr>
        <td></td>
        <td>Итого: <%= total_price %> руб</td>
        <td><%= total_qty %></td>
      </tr>
    </tbody>
  </table>

  <form action="/place_order" method="POST">

    <input name="order[orders_input]" type="hidden" value="<%= @orders_input %>"/>

    <div class="form-group">
      <label>Ваше имя</label>
      <input name="order[name]" type="text" class="form-control" placeholder="Ваше имя">
    </div>

     <div class="form-group">
      <label>Ваше телефон</label>
      <input name="order[phone]" type="text" class="form-control" placeholder="Ваше телефон">
     </div>

    <div class="form-group">
      <label>Адрес доставки</label>
      <textarea name="order[address]" class="form-control" placeholder="Адрес доставки"></textarea> 
     </div>

     <button type="submit" class="btn btn-success btn-lg">Заказать</button>
     <button class="btn btn-danger btn-lg" onclick="return cancel_order()">Отменить</button>

  </form>
</div>